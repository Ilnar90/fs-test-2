<nav class="calendar__new_event secondary">
  <%= link_to t('event.actions.new'), new_event_path %>
</nav>
<nav class="calendar__range__picker secondary modal">
  <dl class="modal-body">
    <% years = [schedule.year, schedule.year + 1]
       months = t('date.abbr_month_names').compact %>

    <% years.each do |year| %>
      <dt><%= year %></dt>
      <dd>
        <ul>
          <% months.each_with_index do |month, i| %>
            <li>
              <% klass = (schedule.year == year && schedule.month == i + 1) ? 'current' : '' %>
              <%= link_to month, events_path(year: year, month: i + 1), class: klass %>
            </li>
          <% end %>
        </ul>
      </dd>
    <% end %>
  </dl>
</nav>
